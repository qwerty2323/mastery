<%= render 'layouts/header' %>
<h1><%= @page.name %></h1>
<div class="container">
  <%= markdown(@page.content) %>
</div>

<div class="btn-group" role="group">
  <button type="button" class="btn btn-default">
    <%= link_to 'Create new subpage', controller: :pages, action: :new, parent_id: @page.parent_id %>
  </button>
</div>

<div class="btn-group" role="group">
  <button type="button" class="btn btn-default">
    <%= link_to 'Edit', edit_page_path %>
  </button>
  <button type="button" class="btn btn-default">
    <%= link_to 'Delete', @page, method: :delete %>
  </button>
</div>

<%= render 'layouts/footer' %>
