<%= render 'layouts/header' %>

<h1>Edit page</h1>

<%= form_for(@page) do |f| %>
  <div class="form-group">
    <%= f.label :parent_id %>
    <%= f.collection_select :parent_id, Page.all.order(:name), :id, :name, include_blank: true %>
  </div>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_area :content, rows: 6 %>
  </div>
  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>

<%= render 'layouts/footer' %>
